@model IEnumerable<ConsidWebExerciseDatabaseFirst.Companies>

@{
    ViewBag.Title = "List";
}

<h1 style="margin:40px 0 30px 0">Companies</h1>

<p><a href="@Url.Action("Create", "CompanyStore")" class="btn btn-primary btn-lg">Add Company</a></p>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OrganizationNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Notes)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink(Server.HtmlDecode(@Html.DisplayFor(modelItem => item.Name).ToHtmlString()), "StoreList", new { id = item.Id })
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OrganizationNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Notes)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
